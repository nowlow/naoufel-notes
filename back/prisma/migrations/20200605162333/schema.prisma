datasource db {
  provider = "mysql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Comment {
  id        Int @id @default(autoincrement())
  note_id   Int
  content   String
  date      DateTime @default(now())
  Note      Note @relation(fields: [note_id], references: [id])

  @@index([note_id], name: "note_id")
}

model Note {
  id        Int @id @default(autoincrement())
  title     String
  content   String
  date      DateTime @default(now())
  comments  Comment[]
}